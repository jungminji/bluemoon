.result-container
  @media (min-width: 1265px) and (max-width: 1904px)
    margin: 0 auto
    max-width: 1120px !important
  @media (min-width: 1905px)
    margin: 0 auto
    max-width: 1440px !important

.search
  & .arrow, & .option
    & .btn__content
      &:before
        display: none
    & .ripple__container
      display: none

.text--bold
  font-weight: bold

.loading
  position: fixed
  z-index: 99
  top: 0
  bottom: 0
  left: 0
  right: 0
  background: rgba(#FFF, 1)
  display: flex
  justify-content: center
  align-items: center