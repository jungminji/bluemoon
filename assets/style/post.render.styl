main
  opacity: 0
  transition: opacity .1s linear

.toolbar
  opacity: 0

.toolbar--fixed
  z-index: 99

.search
  & .arrow, & .option
    & .btn__content
      &:before
        display: none
    & .ripple__container
      display: none

.text--bold
  font-weight: bold

.loading
  position: fixed
  z-index: 99
  top: 0
  bottom: 0
  left: 0
  right: 0
  background: rgba(#FFF, 1)
  display: flex
  justify-content: center
  align-items: center